extends ../layouts/base

append vars
	- title = 'Ондобрдин №4. Заработок';
	- login = true
append scripts
	script(src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js")
block content
	+b.SECTION.onboarding
		.container
			+e.top
				+e.logo.logo__._width
					+e.A(href="#").link
						+e.IMG(src="app/img/logo.svg" alt="Логотип" width="40" height="40")
				+e.A(href="main.html").skip.link Пропустить
			+e.content
				+e.image
					lottie-player(src="app/illustration/illustration-4.json" background="transparent" speed="1" loop autoplay).absolute
				+e.wrap.css-text-center
					+e.subtitle.color-blue Шаг 4
					+e.P На заключительном шаге рассказываем о том, как легко копировать трейды при помощи подключенной стратегии и просто на этом зарабатывать.
		+e.bottom
			.container
				+b.steps
					+e.line
					+e.line
					+e.line
					+e.line.is-active
				+btn('main.html') Заврешить
				+e.A(href="onboarding-v-3.html").link.link Назад